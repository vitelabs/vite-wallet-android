<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorAccent">@color/viteblue</item>
        <item name="colorControlNormal">#eee</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <!-- Base application theme. -->

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog">
    </style>


    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NormalAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="colorAccent">@color/viteblue</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
    </style>

    <style name="Text_highlight">
        <item name="android:textColor">@color/vitebluedeep</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="DexTabTabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
