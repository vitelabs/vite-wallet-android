<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="代币名称"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#b33e4a59"
            android:textSize="14sp"
            android:id="@+id/leftText"/>

    <TextView
            android:id="@+id/bottomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftText"
            tools:text="EtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEtherEther"
            android:textColor="#ff24272b"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:visibility="visible"/>


    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="#eee"
          android:id="@+id/bottomLine"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="12dp"
          app:layout_constraintTop_toBottomOf="@+id/bottomText"/>


</androidx.constraintlayout.widget.ConstraintLayout>